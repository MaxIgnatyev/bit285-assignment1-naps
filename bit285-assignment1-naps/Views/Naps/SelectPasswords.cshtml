@model bit285assignment1naps.Models.User;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>Choose a Password</h1>
<fieldset>
    <form asp-action="SelectPassword">
        <div>
            <label name="GeneratePassword">Possible Passwords</label>
            <input value=@Model.Password />
        </div>
        <div>
            <input type="submit" value="Create Account" />
            <input type="button" value="Reset" />
        </div>
    </form>
</fieldset>

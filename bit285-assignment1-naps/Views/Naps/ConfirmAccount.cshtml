@model bit285assignment1naps.Models.User;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>New Account Created</h1>
<fieldset>
    <form asp-action="ConfirmAccount">
        <div>
            <label asp-for="FirstName">First Name</label>
            <span name="FirstName" value=@Model.FirstName></span>
        </div>
        <div>
            <label asp-for="LastName">Last Name</label>
            <span name="LastName">@Model.LastName</span>
        </div>            <div>
            <label asp-for="Program">Program</label>
            <span name="Program">@Model.Program</span>
        </div>
        <div>
            <label asp-for="Email">Username</label>
            <span name="Email">@Model.Email</span>
        </div>
        <div>
            <label asp-for="Password">Password</label>
            <span name="Password">@Model.Password</span>
        </div>
        <div>
            <input type="submit" value="Go to Login" />
            <input type="button" value="Reset" />
        </div>
    </form>
</fieldset>

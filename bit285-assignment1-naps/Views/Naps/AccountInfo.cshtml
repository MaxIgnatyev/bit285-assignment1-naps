@model bit285assignment1naps.Models.User;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>New Account Information</h1>
<fieldset>
    <form asp-action="AccountInfo">
        <div>
            <label asp-for="FirstName">First Name</label>
            <input placeholder="First Name" name="FirstName"/>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div>   
            <label asp-for="LastName">Last Name</label>
            <input placeholder="Last Name" name="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <label asp-for="Email">Email Address</label>
            <input placeholder="example@email.com" name="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label>Program</label>
            <select asp-for="Program" name="Program">
                <option value="WebAppDev">Web App Dev</option>
                <option value="MobileAppDev">Mobile App Dev</option>
                <option value="FrontEndDev">Front-end Dev</option>
            </select>
        </div>
        <div>
            <input type="submit" value="Create Password" />
            <input type="button" value="Reset" />
        </div>
    </form>
</fieldset>


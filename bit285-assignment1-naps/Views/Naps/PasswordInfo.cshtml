@model bit285assignment1naps.Models.User;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>Password Information</h1>
<fieldset>
    <form asp-action="PasswordInfo">
        <div>
            <label asp-for="LastName">Last Name</label>
            <input value=@Model.LastName name="LastName" />
            <span asp-validation-for="LastName">* required</span>
        </div>
        <div>
            <label asp-for="BirthYear">Birth year</label>
            <input placeholder="####" name="BirthYear" />
            <span asp-validation-for="BirthYear">* required</span>
        </div>
        <div>
            <label asp-for="FavoriteColor">Favorite Color</label>
            <input placeholder="" name="FavoriteColor" />
            <span>* required</span>
        </div>

        <div>
            <input type="submit" value="Suggest Password" />
            <input type="button" value="Reset" />
        </div>
    </form>
</fieldset>